<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet"
          href="https://cdn-uicons.flaticon.com/2.0.0/uicons-regular-straight/css/uicons-regular-straight.css" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
   
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/homeview/assets/css/styles.css" />
    <link href="~/libs/toastr.js/toastr.min.css" rel="stylesheet" />
    <link href="~/assets/css/additional.css" rel="stylesheet" />
   
      @await RenderSectionAsync("addcss",required:false)
    <title>Ecommerce Website</title>
</head>
<body>
    <header class="header">
        <div class="header__top">
            <div class="header__container container">
                <div class="header__contact">
                    <span>+99470-714-70-75</span>
                    <span>Bizim ünvanımız</span>
                </div>
                <p class="header__alert-news">
                    Daha çox kupona qənaət edin
                </p>
                <a asp-controller="account" asp-action="signin" class="header__top-action">
                    Daxil ol/Qeydiyyat
                </a>
            </div>
        </div>

       
    

        <partial name="_Navbar" />
      
    </header>
    @RenderBody()

   
    <footer class="footer container">
        <div class="footer__container grid">
            <div class="footer__content">
                <a href="index.html" class="footer__logo">
                    <img src="~/homeview/assets/img/de-facto-logo-light-v2.svg" alt="" class="footer__logo-img" />
                </a>
                <h4 class="footer__subtitle">Əlaqə</h4>
                <p class="footer__description">
                    <span>Ünvan:</span> Nizami küçəsi 203B, AF Business House
                </p>
                <p class="footer__description">
                    <span>Tel:</span>+99470-714-70-75
                </p>
                <p class="footer__description">
                    <span>İş saatı:</span> 10:00 - 18:00, Bazar ertəsi-Şənbə
                </p>
                <div class="footer__social">
                    <div class="footer__links flex">
                        <a href="https://www.facebook.com/profile.php?id=100004819787815" target="_blank">
                            <img src="~/homeview/assets/img/icon-facebook.svg"
                                 alt=""
                                 class="footer__social-icon" />
                        </a>

                        <a href="https://www.instagram.com/nikoo57.nn/" target="_blank">
                            <img src="~/homeview/assets/img/icon-instagram.svg"
                                 alt=""
                                 class="footer__social-icon" />
                        </a>

                        <a href="https://www.youtube.com" target="_blank">
                            <img src="~/homeview/assets/img/icon-youtube.svg"
                                 alt=""
                                 class="footer__social-icon" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="footer__content">
                <h3 class="footer__title">Ünvan</h3>
                <ul class="footer__links">
                    <li><a href="#" class="footer__link">Haqqımızda</a></li>
                    <li><a href="#" class="footer__link">Çatdırılma məlumatı</a></li>
                    <li><a href="#" class="footer__link">Məxfilik</a></li>
                    <li><a href="#" class="footer__link">Şərtlər və qaydalar</a></li>
                    <li><a href="#" class="footer__link">Əlaqə</a></li>
                    <li><a href="#" class="footer__link">Dəstək Mərkəzi</a></li>
                </ul>

            </div>
            <div class="footer__content">
                <h3 class="footer__title">Hesabım</h3>
                <ul class="footer__links">
                    <li><a href="#" class="footer__link">Daxil ol</a></li>
                    <li><a href="#" class="footer__link">Səbətim</a></li>
                    <li><a href="#" class="footer__link">Sevimlilərim</a></li>
                    <li><a href="#" class="footer__link">Sifarişi izləyin</a></li>
                    <li><a href="#" class="footer__link">Kömək</a></li>
                    <li><a href="#" class="footer__link">Sifariş</a></li>
                </ul>
            </div>
            <div class="footer__content">
                <img src="~/homeview/assets/img/payment-method.png"
                     alt=""
                     class="payment__img" />
            </div>
        </div>
        <div class="footer__bottom">
            <p class="copyright">&copy; 2023 Nicat Namazov. Bütün hüquqlar qorunur</p>
        </div>
    </footer>
   
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/homeview/assets/js/jquery/jquery.slim.js"></script>
    <script src="~/homeview/assets/js/jquery/jquery.slim.min.js"></script>
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/homeview/assets/js/main.js"></script>
    <script src="~/libs/toastr.js/toastr.min.js"></script>

    @RenderSection("addjs",false)

   
</body>
</html>

