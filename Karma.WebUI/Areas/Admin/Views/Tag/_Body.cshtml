@model IEnumerable<Tag>

@foreach (var tag in Model)
{
   <tr>

        <td>@tag.Name</td>
        <td>
            <a asp-action="details" asp-controller="tag" asp-route-id="@tag.Id" class="btn btn-primary"><i>Info</i></a>
            <a asp-action="edit" asp-controller="tag" asp-route-id="@tag.Id" class="btn btn-warning"><i>Edit</i></a>
            <a onclick="removeTag(@tag.Id,'@tag.Name')" class="btn btn-danger"><i>Remove</i></a>
        </td>

    </tr>
}